@using EntitiyLayer.Concrete
@model List<SocialMedia>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div>
    <h4>Sosyal Medya Hesapları</h4>
</div>
<div class="row">
    <div class="col-6 grid-margin stretch-card">
        <div class="card bg-default shadow">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Hesap</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@item.SocialMediaID</td>
                                <td>@item.Name</td>
                                @*<td><a href="/SocialMedia/EditSocialMedia/@item.SocialMediaID" class="btn btn-outline-warning">Güncelle</a></td>*@
                                <td><a class="btn btn-outline-danger btn-sm" href="/Admin/SocialMedia/DeleteSocialMedia/@item.SocialMediaID" id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz?');"><i class="ni ni-fat-remove"></i> Sil</a></td>
                                <td><a href="#" class="btn btn-outline-warning btn-sm" data-target="/Admin/SocialMedia/EditSocialMediaInModal/@item.SocialMediaID">Düzenle</a></td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>
            <br />
            <a href="#" class="btn btn-outline-success btn-sm" data-target="/Admin/SocialMedia/AddSocialMediaInModal">Yeni Hesap Ekle</a>
        </div>
    </div>
</div>


<!--Deneme Modal'ı-->

<div class="modal fade" id="modelView" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            @*<div class="modal-header">
            <h5 class="modal-title">Modal title</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>*@

            <div class="modal-body">
                <!--Modal içeriği-->
            </div>

        </div>
    </div>
</div>

