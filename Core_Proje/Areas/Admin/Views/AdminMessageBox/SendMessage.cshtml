@model  EntitiyLayer.Concrete.Message
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div>
    <h4>Yeni Mesaj</h4>
</div>
<div class="row">
    <div class="col-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label>Alıcı</label>
                        @Html.TextBoxFor(x=>x.RecieverUserName, new {@class = "form-control text-light"})
                        @Html.ValidationMessageFor(x=> x.RecieverFullName)
                    </div>
                    <div class="form-group">
                        <label>Konu</label>
                        @Html.TextBoxFor(x=>x.Subject, new {@class = "form-control text-light"})
                    </div>
                    <div class="form-group">
                        <label>Mesaj</label>
                        @Html.TextAreaFor(x=>x.MessageContent, 8,3, new {@class = "form-control text-light"})
                    </div>
                    <button type="submit" class="btn btn-outline-success btn-sm">Gönder</button>
                </form>
            </div>
        </div>
    </div>

</div>


