@model EntitiyLayer.Concrete.Service
@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Hizmet Düzenleme</h3>
</div>

@using (Html.BeginForm("EditService", "Service", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Yeni Proje Ekleme Paneli </p>
                <form class="forms-sample">
                    <br />
                    @Html.HiddenFor(x=> x.ServiceID)
                    <br />
                    @Html.Label("Hizmet")
                    @Html.TextBoxFor(x=>x.Title, new {@class="form-control"})
                    <br />
                    <label>Resim Yolu</label>
                    @Html.TextBoxFor(x=>x.ImageUrl, new {@class="form-control"})
                    <br />
                    <button class="btn btn-info">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
}