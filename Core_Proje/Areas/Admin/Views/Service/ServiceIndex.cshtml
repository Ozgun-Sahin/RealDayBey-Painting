@using EntitiyLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div>
    <h4>Hizmetlerim</h4>
</div>

<div class="row">
    <div class="col-6 grid-margin stretch-card">
        <div class="card bg-default shadow">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Hizmet</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        @*<a href="#" class="avatar rounded-circle mr-3">
                                    <img alt="Image placeholder" src="@item.Platform">
                                    </a>*@
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@item.ServiceID</span>
                                        </div>
                                    </div>
                                </th>
                                <td class="budget">@item.Title</td>

                                <td><a class="btn btn-outline-danger btn-sm" href="/Admin/Service/DeleteService/@item.ServiceID" id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz?');"><i class="ni ni-fat-remove"></i> Sil</a></td>
                                <td><a href="#" class="btn btn-outline-warning btn-sm" data-target="/Admin/Service/ServiceDetailsInModal/@item.ServiceID">Düzenle</a></td>
                                
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <br />
            <a href="#" class="btn btn-outline-success btn-sm" data-target="/Admin/Service/AddServiceInModal">Yeni Hizmet Ekle</a>
        </div>
    </div>
</div>

<!--Deneme Modal'ı-->

<div class="modal fade" id="modelView" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            @*<div class="modal-header">
            <h5 class="modal-title">Modal title</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>*@

            <div class="modal-body">
                <!--Modal içeriği-->
            </div>

        </div>
    </div>
</div>

