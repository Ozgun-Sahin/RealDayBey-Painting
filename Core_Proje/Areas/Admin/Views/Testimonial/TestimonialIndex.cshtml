@using EntitiyLayer.Concrete
@model List<Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<style>
    .table-cell-content {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

</style>

<div>
    <h4>Referanslar</h4>
</div>
<div class="row ">
    <div class="col-md-6 grid-margin">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table" style="table-layout: fixed;">
                        <thead>
                            <tr>
                                <th style="width: 120px;"> Müşteri </th>
                                <th class="d-none d-md-table-cell"> Onay Durumu </th>
                                <th> Sil </th>
                                <th> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td class="table-cell-content">
                                        <img src="@item.ImageUrl" alt="image"/>
                                        <span class="pl-2">@item.ClientName</span>
                                    </td>
                                    @if (item.IsComfirmed==true)
                                    {
                                        <td class="d-none d-md-table-cell">Onaylandı</td>
                                    }else
                                    {
                                        <td class="d-none d-md-table-cell">Onaylanmadı</td>
                                    }
                                    <td> <a href="/Admin/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-outline-danger btn-sm"> Sil</a>  </td>
                                    <td><a href="#" class="btn btn-outline-warning btn-sm" data-target="/Admin/Testimonial/TestimonialDetailsInModal/@item.TestimonialID">Detaylar</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!--Deneme Modal'ı-->

