@using EntitiyLayer.Concrete
@*@model List<WriterMessage>*@
@model IEnumerable<Message>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div>
    <h4>Gelen Kutusu</h4>
</div>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">      
        <div class="card bg-default shadow">
            <div class="table-responsive">
                <table class="table table-hover" style="table-layout: fixed;">
                    <thead class="thead-dark">
                        <tr>
                            <th class="d-none d-md-table-cell" style="width: 100px;">#</th>
                            <th class="d-none d-md-table-cell table-cell-content" style="width: 200px;">Gönderen</th>
                            <th class="table-cell-content">Gönderen Kullanıcı İsmi</th>
                            <th class="d-none d-md-table-cell table-cell-content" >Konu</th>
                            <th class="d-none d-md-table-cell table-cell-content" >Mesaj</th>
                            <th class="d-none d-md-table-cell table-cell-content">Tarih</th>
                            <th >Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {

                            <tr>
                                <th class="d-none d-md-table-cell">@item.MessageID</th>
                                <th class="table-cell-content d-none d-md-table-cell">@item.SenderFullName</th>
                                <th class="table-cell-content table-cell-content">@item.SenderUserName</th>
                                <td class="d-none d-md-table-cell table-cell-content">@item.Subject</td>
                                <td class="d-none d-md-table-cell table-cell-content">@item.MessageContent</td>
                                <td class="d-none d-md-table-cell table-cell-content">@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                                <td ><a href="#" class="btn btn-outline-warning btn-sm" data-target="/Admin/AdminMessageBox/MessageDetailsInModal/@item.MessageID">Detaylar</a></td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


