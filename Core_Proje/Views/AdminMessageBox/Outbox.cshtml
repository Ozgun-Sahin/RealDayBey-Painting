@using EntitiyLayer.Concrete
@model IEnumerable<WriterMessage>
@{
    ViewData["Title"] = "Outbox";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div>
    <h4>Giden Kutusu</h4>
</div>
<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card bg-default shadow">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Alıcı</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {

                            <tr>
                                <th>@item.WriterMessageID</th>
                                <th>@item.RecieverFullName</th>
                                <td>@item.Subject</td>
                                <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                                <td><a href="#" class="btn btn-outline-warning btn-sm" data-target="/Writer/Message/MessageDetailsInModal/@item.WriterMessageID">Detaylar</a></td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



