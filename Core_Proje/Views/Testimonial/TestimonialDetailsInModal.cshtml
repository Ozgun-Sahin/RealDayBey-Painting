@using (Html.BeginForm("TestimonialDetailsInModal", "Testimonial", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample">
                    @Html.HiddenFor(x=>x.TestimonialID)
                    @Html.HiddenFor(x=>x.ImageUrl)
                    <div class="form-group">
                        <label>Ad Soyad</label>
                        @Html.TextBoxFor(x => x.ClientName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Yorum</label>
                        @Html.TextAreaFor(x => x.Comment, 8, 3, new { @class = "form-control" })
                    </div>
                    <div>
                        <label>Projeyi Onayla</label>
                        @Html.CheckBoxFor(x=>x.IsComfirmed, new {id="IsComfirmed"})
                    </div>
                    <button id='modalClose' type="submit" class="btn btn-outline-primary" data-bs-dismiss="modal">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
}