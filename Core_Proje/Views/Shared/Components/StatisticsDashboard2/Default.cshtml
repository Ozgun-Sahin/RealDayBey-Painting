<div class="row">
    <div class="col-sm-3 grid-margin">
        <div class="card">
            <div class="card-body">
                <h5>Gelen Mesajlar</h5>
                <a href="/Admin/AdminMessageBox/Inbox" class="stretched-link"> </a>
                <div class="row">
                    <div class="col-8 col-sm-12 col-xl-8 my-auto">
                        <div class="d-flex d-sm-block d-md-flex align-items-center">
                            <h2 class="mb-0">@ViewBag.RecievedMessages</h2>
                        </div>
                    </div>
                    <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                        <i class="icon-lg mdi mdi-message-outline text-primary ml-auto"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-3 grid-margin">
        <div class="card">
            <div class="card-body">
                <h5>Giden Mesajlar</h5>
                <a href="/Admin/AdminMessageBox/Outbox" class="stretched-link"> </a>
                <div class="row">
                    <div class="col-8 col-sm-12 col-xl-8 my-auto">
                        <div class="d-flex d-sm-block d-md-flex align-items-center">
                            <h2 class="mb-0">@ViewBag.SentMessages</h2>
                        </div>
                    </div>
                    <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                        <i class="icon-lg mdi mdi-message text-danger ml-auto"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-3 grid-margin">
        <div class="card">
            <div class="card-body">
                <h5>Onay Bekleyen Projeler</h5>
                <a href="/Admin/Project/ProjectIndex" class="stretched-link"> </a>
                <div class="row">
                    <div class="col-8 col-sm-12 col-xl-8 my-auto">
                        <div class="d-flex d-sm-block d-md-flex align-items-center">
                            <h2 class="mb-0">@ViewBag.PendingProjects</h2>                           
                        </div>
                    </div>
                    <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                        <i class="icon-lg mdi mdi-chart-bubble text-warning ml-auto"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-3 grid-margin">
        <div class="card">
            <div class="card-body">
                <h5>Devam Eden Projeler</h5>
                <a href="/Admin/Project/ProjectIndex" class="stretched-link"> </a>
                <div class="row">
                    <div class="col-8 col-sm-12 col-xl-8 my-auto">
                        <div class="d-flex d-sm-block d-md-flex align-items-center">
                            <h2 class="mb-0">@ViewBag.ConfirmedProjects</h2>
                        </div>
                    </div>
                    <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                        <i class="icon-lg mdi mdi-chart-bubble text-success ml-auto"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
