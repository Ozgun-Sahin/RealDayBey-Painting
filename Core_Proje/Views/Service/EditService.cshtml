@model EntitiyLayer.Concrete.Service
@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("EditService", "Service", FormMethod.Post))
{
    <div class="col-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Yeni Hizmet Ekle </h4>
                <form class="forms-sample">
                    <br />
                    @Html.HiddenFor(x=> x.ServiceID)
                    <br />
                    @Html.Label("Hizmet")
                    @Html.TextBoxFor(x=>x.Title, new {@class="form-control text-light"})
                    <br />
                    <label>İkon</label>
                    @Html.TextBoxFor(x=>x.ImageUrl, new {@class="form-control text-light"})
                    <br />
                    <button class="btn btn-info">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
}