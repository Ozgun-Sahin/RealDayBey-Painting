@model Core_Proje.Areas.Admin.Models.AddSocialMediaModel
@*@{
    var ikonlar = ((List<SelectListItem>)ViewBag.Icons);
}*@

<div class="card-header border-0">
    <h4 class="mb-0">Hesap Ekleme</h4>
</div>

@using (Html.BeginForm("AddSocialMediaInModal", "SocialMedia", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample" method="post">
                    @Html.Label("Hesap")
                    @Html.DropDownListFor(x => x.Icon, new List<SelectListItem> {
                    new SelectListItem { Value ="fab fa-facebook" , Text = "Facebook"},
                    new SelectListItem { Value ="fab fa-github" , Text = "GitHub"},
                    new SelectListItem { Value ="fab fa-instagram" , Text = "Instagram"},
                    new SelectListItem { Value ="fab fa-linkedin" , Text = "LinkedIn"},
                    new SelectListItem { Value ="fa fa-link" , Text = "Diğer.."},
                }, new {@class="myselect"})

                    <br>
                    @Html.Label("Url")
                    @Html.TextBoxFor(x=>x.Url, new {@class = "form-control text-light"})
                    <br>
                    <button id='modalClose' type="submit" class="btn btn-outline-primary btn-sm" data-bs-dismiss="modal">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
}
