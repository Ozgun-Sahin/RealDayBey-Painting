@model EntitiyLayer.Concrete.Announcement
@{
    ViewData["Title"] = "MakeAnnouncement";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div>
    <h4>Yeni Duyuru</h4>
</div>
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x=>x.Title, new {@class = "form-control text-light"})
                    </div>
                    <div class="form-group">
                        <label>Konu</label>
                        @Html.TextBoxFor(x=>x.Content, new {@class = "form-control text-light"})
                    </div>
                    <button type="submit" class="btn btn-outline-success btn-sm">Duyuru Yap</button>
                </form>
            </div>
        </div>
    </div>

</div>

