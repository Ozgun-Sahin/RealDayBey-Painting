@using EntitiyLayer.Concrete
@model List<Project>
@{
    ViewData["Title"] = "Portfolio";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div>
    <h4>Protföy</h4>
</div>
<div class="row">
    <div class="col">
        <div class="card bg-default shadow">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Proje</th>
                            <th>Ücret</th>
                            <th>Onay Durumu</th>
                            <th>İlerleme Durumu</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        @*<a href="#" class="avatar rounded-circle mr-3">
                                    <img alt="Image placeholder" src="@item.Platform">
                                    </a>*@
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@item.ProjectID</span>
                                        </div>
                                    </div>
                                </th>
                                <td class="budget">@item.ProjectName</td>
                                <td class="budget">@item.Price</td>

                                @if (item.IsComfirmed == true)
                                {
                                    <td class="budget">Onaylandı</td>
                                }
                                else
                                {
                                    <td class="budget">Onay Bekliyor</td>
                                }

                                <td>
                                    <span class="completion mr-2">@item.Progress%</span>
                                    <div>
                                        <div class="progress">
                                            <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="@item.Progress" aria-valuemin="0" aria-valuemax="100" style="width: @item.Progress%;"></div>
                                        </div>
                                    </div>
                                </td>
                                <td><a class="btn btn-outline-danger" href="/Admin/Project/DeleteProject/@item.ProjectID" id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz?');"><i class="ni ni-fat-remove"></i>Sil</a></td>
                                <td><a href="#" class="btn btn-outline-warning btn-sm" data-target="/Admin/Project/ProjectDetailsInModal/@item.ProjectID">Düzenle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!--Deneme Modal'ı-->

<div class="modal fade" id="modelView" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            @*<div class="modal-header">
            <h5 class="modal-title">Modal title</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>*@

            <div class="modal-body">
                <!--Modal içeriği-->
            </div>

        </div>
    </div>
</div>

