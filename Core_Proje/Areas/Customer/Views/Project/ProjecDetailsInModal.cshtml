@using Core_Proje.Areas.Customer.Models
@using EntitiyLayer.Concrete
@using DataAccessLayer.EntityFramework
@using BusinessLayer.Concrete

@model Project

@using (Html.BeginForm("ProjecUpdateInModal", "Project", FormMethod.Post))
{
    <div class="card">
        <div class="card-header">
            @Model.ProjectName
        </div>
        <div class="card-body">
            <form class="form-form" method="post">
                @Html.HiddenFor(x=>x.ProjectID)
                @Html.HiddenFor(x=>x.ProjectName)
                @Html.HiddenFor(x=>x.Progress)
                @Html.HiddenFor(x=>x.Price)
                @Html.HiddenFor(x=>x.IsComfirmed)
                @Html.HiddenFor(x=>x.Description)
                @Html.HiddenFor(x=>x.ClientUserID)
                @Html.HiddenFor(x=>x.ServiceID)
                <h5 class="card-title">İlerleme Durumu : % @Model.Progress</h5>
                <div class="progress">
                    <div class="progress-bar bg-warning" role="progressbar" style="width: @Model.Progress%" aria-valuenow="@Model.Progress" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <p class="card-text">@Model.Description</p>
                <p class="card-text"> Ücret: @Model.Price TL</p>
            </form>
        </div>
    </div>
}


