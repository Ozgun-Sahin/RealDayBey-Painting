@using EntitiyLayer.Concrete
@model List<Project>


<div class="col-8 grid-margin">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Projeler</h4>
            <div class="table-hover">
                <table class="table">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th>Proje</th>
                            <th>Fiyat</th>
                            <th>Maliyet</th>
                            <th>Durum</th>
                            <th>Tamamlanma Oranı</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>@item.ProjectID</td>
                                <td>@item.ProjectName</td>
                                <td>@item.Price</td>
                                <td>@item.Expence</td>
                                <td>buraya durum gelcek</td>
                                <td>%@item.Progress</td>
                                <td>
                                    <div class="badge badge-outline-success">bir tuş</div>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
