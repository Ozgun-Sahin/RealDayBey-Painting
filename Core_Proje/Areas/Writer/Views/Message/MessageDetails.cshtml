@model EntitiyLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4>Mesaj Detayları</h4>
            <form class="form-form">
                @Html.HiddenFor(x=>x.WriterMessageID)
                <br />
                @Html.Label("Konu")
                @Html.TextBoxFor(x=>x.Subject , new{@class="form-control"})
                <br />
                @Html.Label("Mesaj")
                @Html.TextAreaFor(x=>x.MessageContent, 10, 3, new{@class="form-control"})
            </form>
        </div>
    </div>
</div>