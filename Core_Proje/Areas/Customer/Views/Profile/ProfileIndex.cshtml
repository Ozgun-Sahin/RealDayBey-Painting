@model Core_Proje.Areas.Customer.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kullanıcı Bilgilerini Düzenle</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Adınız</label>
                    <input type="text" asp-for="Name" class="form-control" id="exampleInputName1" placeholder="Adınız">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Soyadınız</label>
                    <input type="text" asp-for="Surname" class="form-control" id="exampleInputEmail3" placeholder="Soyadınız">
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifreniz</label>
                    <input type="password" asp-for="CurrentPassword" class="form-control" id="exampleInputEmail3" placeholder="Şifre">
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Yeni Şifre</label>
                    <input type="password" asp-for="NewPassword" class="form-control" id="exampleInputEmail3" placeholder="Yeni Şifre">
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Yeni Şifre Tekrar</label>
                    <input type="password" asp-for="NewPasswordConfirm" class="form-control" id="exampleInputEmail3" placeholder="Yeni Şifre Tekrar">
                    <span asp-validation-for="NewPasswordConfirm" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Resim Seç</label>
                    <input type="file" asp-for="Picture">
                    @*<div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="Resim Seç">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-primary" type="button">Yükle</button>
                        </span>
                    </div>*@
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly">
                </div>
                <button type="submit" class="btn btn-primary btn-sm mr-2">Güncelle</button>
                <button class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>
