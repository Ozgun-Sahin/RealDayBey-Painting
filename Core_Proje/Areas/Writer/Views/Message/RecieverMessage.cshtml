@using EntitiyLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "RecieverMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Gelen Kutusu</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {

                        <tr>
                            <th>@item.WriterMessageID</th>
                            <td>@item.Subject</td>
                            <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                                <td><a href="/Writer/Message/MessageDetails/@item.WriterMessageID" class="btn btn-primary btn-sm">Detaylar</a></td>
                        </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
